{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./server",  // ✅ CORRECT
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "server/src/types/*"]  // ✅ CORRECT
    },
    "typeRoots": ["./node_modules/@types", "./server/src/types"]  // ✅ CORRECT
  },
  "include": ["server/**/*"],  // ✅ CORRECT
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}